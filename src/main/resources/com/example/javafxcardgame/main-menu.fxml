<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml"
      alignment="CENTER"
      fx:controller="com.example.javafxcardgame.MainController"
      styleClass="mainVbox"
    >
    <Label
            text="Java FX Card Game"
            alignment="CENTER"
            styleClass="mainLabel"
    />
    <HBox
        alignment="CENTER"
        >
        <Label
            text="How many decks of cards?(1-20)"
            alignment="CENTER"
            />
        <TextField
                fx:id="deckNumField"
            alignment="CENTER"
            />
    </HBox>
    <Button
        fx:id="startButton"
        styleClass="startButton"
        text="Start Game"
        alignment="CENTER"
        />
    <Label
        fx:id="errorText"
        styleClass="errorText"
        />
    <Label
            styleClass="authorText"
        text="Author: Igor CiÅ¼ewski"
        />
</VBox>
